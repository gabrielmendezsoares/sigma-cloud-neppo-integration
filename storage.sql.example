CREATE EVENT `delete_sigma_cloud_access_control_events`
ON SCHEDULE EVERY 1 DAY
DO
  DELETE FROM sigma_cloud_access_control_events
  WHERE created_at < NOW() - INTERVAL 3 MONTH;

CREATE EVENT `delete_sigma_cloud_alarm_events`
ON SCHEDULE EVERY 1 DAY
DO
  DELETE FROM sigma_cloud_alarm_events
  WHERE created_at < NOW() - INTERVAL 3 MONTH;

CREATE EVENT `delete_sigma_cloud_neppo_integration_satisfaction_surveys`
ON SCHEDULE EVERY 1 DAY
DO
  DELETE FROM sigma_cloud_neppo_integration_satisfaction_surveys
  WHERE created_at < NOW() - INTERVAL 3 MONTH;


